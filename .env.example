# Branding (change these for each client deployment)
BRAND_NAME=Muscari OS
BRAND_SLUG=muscari
BRAND_COMPANY=Piero Muscari
BRAND_CONTACT_EMAIL=info@pieromuscari.it
BRAND_DESCRIPTION=Piattaforma di gestione aziendale Piero Muscari - CRM, Progetti, Contabilita, Team
BRAND_WEBSITE_URL=https://pieromuscari.it
BRAND_EMAIL_PLACEHOLDER=nome@pieromuscari.it
NEXT_PUBLIC_BRAND_NAME=Muscari OS
NEXT_PUBLIC_BRAND_SLUG=muscari

# Database
DATABASE_URL=postgresql://muscari_os_user:PASSWORD@vps-panel-postgres:5432/muscari_os_db

# Auth
JWT_SECRET=change-me-generate-with-openssl-rand-hex-64
REFRESH_SECRET=change-me-generate-with-openssl-rand-hex-64
SIGNATURE_SECRET=change-me-generate-with-openssl-rand-hex-64

# Site
NEXT_PUBLIC_SITE_URL=https://os.pieromuscari.it

# Cloudflare R2 (primary CDN storage — zero egress, global edge)
# Uses Cloudflare REST API (Bearer token), no S3 credentials needed.
# Each OS instance gets its own bucket for full autonomy.
# Leave R2_ACCOUNT_ID empty to disable R2 and use MinIO only.
R2_ACCOUNT_ID=
R2_API_TOKEN=
R2_BUCKET=muscari-os
R2_PUBLIC_URL=https://files.fodivps1.cloud

# MinIO (local VPS storage — dev/Claude Code access, local backup when R2 is active)
S3_ENDPOINT=http://vps-panel-minio:9000
S3_ACCESS_KEY=your_minio_access_key
S3_SECRET_KEY=your_minio_secret_key
S3_BUCKET=muscari-os-assets
S3_REGION=us-east-1

# VAPID Push Notifications (generate with: node -e "console.log(require('web-push').generateVAPIDKeys())")
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:info@pieromuscari.it

# N8N Webhooks
N8N_WEBHOOK_URL=https://n8n.fodivps1.cloud/webhook/muscari-os
N8N_WEBHOOK_SECRET=change-me-generate-a-random-secret

# Apple Wallet
APPLE_PASS_TYPE_ID=pass.it.pieromuscari.card
APPLE_TEAM_ID=your_apple_team_id
APPLE_PASS_CERT_PATH=./certs/pass.pem
APPLE_PASS_KEY_PATH=./certs/pass.key
APPLE_WWDR_CERT_PATH=./certs/wwdr.pem

# Google Wallet
GOOGLE_WALLET_ISSUER_ID=your_google_wallet_issuer_id
GOOGLE_WALLET_SA_KEY_PATH=./certs/google-wallet-sa.json

# Google OAuth (optional - enables Calendar, Drive backup, Meet)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://os.pieromuscari.it/api/auth/google/callback

# Google Drive admin user ID (optional - if not set, uses first admin with Google connected)
GOOGLE_DRIVE_ADMIN_ID=

# Google Cloud Project ID (for documentation/reference only)
GOOGLE_CLOUD_PROJECT_ID=

# S3 Public URL (MinIO external access — storage.domain points to S3 API like FODI OS)
S3_PUBLIC_URL=https://storage.fodivps1.cloud

# SMTP (for sending emails)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@pieromuscari.it

# File upload limits
MAX_FILE_SIZE_MB=1024

# Image domains (comma-separated hostnames for Next.js remotePatterns)
ALLOWED_IMAGE_DOMAINS=os.pieromuscari.it,storage.fodivps1.cloud,files.fodivps1.cloud

# Docker Compose / Traefik (per-client routing)
APP_NAME=muscari-os
APP_CONTAINER_NAME=muscari-os_app
APP_DOMAIN=os.pieromuscari.it
APP_TLS=true
APP_TLS_RESOLVER=
APP_PREVIEW_DOMAIN=muscari-os.fodivps1.cloud
