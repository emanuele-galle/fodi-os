# Branding (change these for each client deployment)
BRAND_NAME=FODI OS
BRAND_SLUG=fodi
BRAND_COMPANY=FODI S.r.l.
BRAND_CONTACT_EMAIL=info@fodisrl.it
BRAND_DESCRIPTION=Piattaforma di gestione aziendale FODI Srl - CRM, Progetti, Contabilita, Team
BRAND_WEBSITE_URL=https://fodisrl.it
BRAND_EMAIL_PLACEHOLDER=nome@fodisrl.it
NEXT_PUBLIC_BRAND_NAME=FODI OS
NEXT_PUBLIC_BRAND_SLUG=fodi

# Database
DATABASE_URL=postgresql://fodi_os_user:PASSWORD@vps-panel-postgres:5432/fodi_os_db

# Auth
JWT_SECRET=change-me-generate-with-openssl-rand-hex-64
REFRESH_SECRET=change-me-generate-with-openssl-rand-hex-64
SIGNATURE_SECRET=change-me-generate-with-openssl-rand-hex-64

# Site
NEXT_PUBLIC_SITE_URL=https://os.fodisrl.it

# S3/MinIO
S3_ENDPOINT=http://vps-panel-minio:9000
S3_ACCESS_KEY=your_minio_access_key
S3_SECRET_KEY=your_minio_secret_key
S3_BUCKET=fodi-os-assets
S3_REGION=us-east-1

# VAPID Push Notifications (generate with: node -e "console.log(require('web-push').generateVAPIDKeys())")
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:info@fodisrl.it

# N8N Webhooks
N8N_WEBHOOK_URL=https://n8n.fodivps2.cloud/webhook/fodi-os
N8N_WEBHOOK_SECRET=change-me-generate-a-random-secret

# Apple Wallet
APPLE_PASS_TYPE_ID=pass.it.fodisrl.card
APPLE_TEAM_ID=your_apple_team_id
APPLE_PASS_CERT_PATH=./certs/pass.pem
APPLE_PASS_KEY_PATH=./certs/pass.key
APPLE_WWDR_CERT_PATH=./certs/wwdr.pem

# Google Wallet
GOOGLE_WALLET_ISSUER_ID=your_google_wallet_issuer_id
GOOGLE_WALLET_SA_KEY_PATH=./certs/google-wallet-sa.json

# Google OAuth (optional - enables Calendar, Drive backup, Meet)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://os.fodisrl.it/api/auth/google/callback

# Google Drive admin user ID (optional - if not set, uses first admin with Google connected)
GOOGLE_DRIVE_ADMIN_ID=

# Google Cloud Project ID (for documentation/reference only)
GOOGLE_CLOUD_PROJECT_ID=

# S3 Public URL (for external access to MinIO files)
S3_PUBLIC_URL=https://storage.fodivps2.cloud

# SMTP (for sending emails)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@fodisrl.it

# File upload limits
MAX_FILE_SIZE_MB=1024

# Image domains (comma-separated hostnames for Next.js remotePatterns)
ALLOWED_IMAGE_DOMAINS=os.fodisrl.it,fodi-os.fodivps2.cloud

# Docker Compose / Traefik (per-client routing)
APP_NAME=fodi-os
APP_CONTAINER_NAME=fodi-os_app
APP_DOMAIN=os.fodisrl.it
APP_TLS=true
APP_TLS_RESOLVER=
APP_PREVIEW_DOMAIN=fodi-os.fodivps2.cloud
